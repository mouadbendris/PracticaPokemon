<UserControl x:Class="PracticaPokemon.Controls.PokemonSeleccionat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticaPokemon.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#FFC3F1C3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Background="Green" Grid.Row="0">
                    <TextBlock x:Name="tbname" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokName}"></TextBlock>
                </StackPanel>
                <StackPanel HorizontalAlignment="Left" Grid.Row="1" Orientation="Horizontal">
                    <TextBlock>Height:</TextBlock>
                    <Label></Label>
                    <TextBlock x:Name="tbheight" Text="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokHeight}" ></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock>Weight:</TextBlock>
                    <Label></Label>
                    <TextBlock x:Name="tbweight" Text="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokWeight}"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <TextBlock>Base experience: </TextBlock>
                    <Label></Label>
                    <TextBlock x:Name="tbexperience" Text="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokBaseExperience}"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="4" Orientation="Horizontal">
                    <TextBlock>Abilities:</TextBlock>
                    <Label></Label>
                    <ItemsControl ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokemonAbilities}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"></StackPanel>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                   <Run x:Name="tbabilities" Text="{Binding Abil.AbilName}"></Run>
                                    <Run Text="|"></Run>
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <StackPanel Grid.Row="5" Orientation="Horizontal">
                    <TextBlock>Hp:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BHp}"></local:Barra>
                </StackPanel>
                <StackPanel Grid.Row="6" Orientation="Horizontal">
                    <TextBlock>Attack:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BAtk}"></local:Barra>
                </StackPanel>
                <StackPanel Grid.Row="7" Orientation="Horizontal">
                    <TextBlock>Defence:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BDef}"></local:Barra>
                </StackPanel>
                <StackPanel Grid.Row="8" Orientation="Horizontal">
                    <TextBlock>Speed:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BSpeed}"></local:Barra>
                </StackPanel>
                <StackPanel Grid.Row="9" Orientation="Horizontal">
                    <TextBlock>Sp Atk:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BSpAtk}"></local:Barra>
                </StackPanel>
                <StackPanel Grid.Row="10" Orientation="Horizontal">
                    <TextBlock>Sp def:</TextBlock>
                    <Label></Label>
                    <local:Barra TheBarra="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.BaseStat.BSpDef}"></local:Barra>
                </StackPanel>

            </Grid>
            <Image Grid.Column="0" Source="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat}, Path=ThePokemon.PokImage}"></Image>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Background="Green" Grid.Row="0">
                <TextBlock FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Damage Modifiers"></TextBlock>
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ItemsControl ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=local:PokemonSeleccionat},Path=ThePokemon.PokemonTypes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"></StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:Tipus TheType="{Binding Type}"></local:Tipus>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
