<Window x:Class="PracticaPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaPokemon" xmlns:Controls="clr-namespace:PracticaPokemon.Controls"
        mc:Ignorable="d"
        Title="The Amazing Pokedex" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="White"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C2C2C">
            <StackPanel Margin="0,20,0,0">
                <Button Background="Transparent" BorderThickness="0" Margin="0,0,0,20" Cursor="Hand">
                    <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z" 
                          Fill="White" Stretch="Uniform" Width="24" Height="24"/>
                </Button>

                <Button Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Grid>
                        <Ellipse Width="40" Height="40" Fill="#C03028"/>
                        <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12C4,13.85 4.63,15.55 5.68,16.91L18.91,3.68C17.55,2.63 15.85,2 14,2H12M20,12A8,8 0 0,0 12,4V4L4.09,11.91C4.06,12.21 4,12.5 4,12.8A8,8 0 0,0 12,20.8A8,8 0 0,0 20,12.8V12Z" 
                              Fill="White" Width="30" Height="30" Stretch="Uniform"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
            </Grid>

            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="PokéDex" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Black">
                        <TextBlock.Foreground>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFCB05" Offset="0"/>
                                <GradientStop Color="#3D7DCA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <TextBox x:Name="TxtSearch" Width="200" Height="30" 
                         VerticalContentAlignment="Center" Padding="5"
                         Tag="Nom o codi..." 
                         Margin="0,0,10,0"
                         TextChanged="TxtSearch_TextChanged"/>  

                    <ComboBox x:Name="CmbTypes" Width="150" Height="30" 
                          Margin="0,0,10,0" VerticalContentAlignment="Center"
                          SelectionChanged="CmbTypes_SelectionChanged"
                          />  

                    <Button Content="X" Width="30" Height="30" 
                        Background="#E0E0E0" BorderThickness="0"
                        Click="BtnClear_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="20,0,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ListView x:Name="LstPokemons" 
                          Grid.Column="0" 
                          BorderThickness="0" 
                          Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          SelectionChanged="LstPokemons_SelectionChanged">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Controls:PokemonCard ThePokemon="{Binding}"></Controls:PokemonCard>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>


                <Controls:PokemonSeleccionat ThePokemon="{Binding ElementName=LstPokemons, Path=SelectedItem}" Grid.Column="2"></Controls:PokemonSeleccionat>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
